@model  SchoolProject.Models.Request

@{
    ViewData["Title"] = "Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<div class="page-content container">
    <div class="page-header text-blue-d2">
        <div class="page-tools">
            <div class="action-buttons">
                <button onclick="printDiv('printableArea')" class="btn bg-white btn-light mx-1px text-95" data-title="Print">
                    <i class="mr-1 fa fa-print text-primary-m1 text-120 w-2"></i>
                    Print
                </button>
                <a class="btn bg-white btn-light mx-1px text-95" data-title="PDF">
                    <i class="mr-1 fa fa-file-pdf-o text-danger-m1 text-120 w-2"></i>
                    Export
                </a>
            </div>
        </div>
    </div>
        <div id="printableArea">
            <div class="container px-0">
                <div class="row mt-4">
                    <div class="col-12 col-lg-10 offset-lg-1">
                        <div class="row">
                            <div class="col-12">
                                <div class="text-center text-150">
                                    <i class="fa fa-book fa-2x text-success-m2 mr-1"></i>
                                    <span class="text-default-d3">Medicine Donation Portal</span>
                                </div>
                            </div>
                        </div>
                        <!-- .row -->

                        <hr class="row brc-default-l1 mx-n1 mb-4" />

                        <div class="row">
                            <div class="col-sm-6">
                                <div>
                                    <span class="text-sm text-grey-m2 align-middle">Donor @Html.DisplayNameFor(model => model.Requestor.Id):</span>
                                    <span class="text-600 text-110 text-blue align-middle">@ViewBag.Requestor.UserName</span>
                                </div>
                                <div>
                                    <span class="text-sm text-grey-m2 align-middle">Name:</span>
                                    <span class="text-600 text-110 text-blue align-middle">@ViewBag.Requestor.FirstName @ViewBag.Requestor.LastName</span>
                                </div>
                                <div class="text-grey-m2">
                                    <div class="my-1">
                                        <span class="text-sm text-grey-m2 align-middle">@Html.DisplayNameFor(model => model.Requestor.Address):</span>
                                        <span class="text-600 text-110 align-middle">@ViewBag.Requestor.Address</span>
                                    </div>
                                    <div class="my-1"><i class="fa fa-phone fa-flip-horizontal text-secondary"></i> <b class="text-600">@ViewBag.Requestor.PhoneNumber</b></div>
                                </div>
                            </div>
                            <!-- /.col -->

                            <div class="text-95 col-sm-6 align-self-start d-sm-flex justify-content-end">
                                <hr class="d-sm-none" />
                                <div class="text-grey-m2">
                                    <div class="mt-1 mb-2 text-secondary-m1 text-600 text-125">
                                        Invoice
                                    </div>

                                    <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">ID:</span> @Html.DisplayFor(mdoel => mdoel.Id)-@Html.DisplayFor(mdoel => mdoel.Medicine.Id)</div>

                                    <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Issue Date: </span>@DateTime.Today</div>
                                    <!--
                                    <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Status:</span>
                                        <span class="badge badge-warning badge-pill px-25">Unpaid</span>
                                    </div>
                                    -->


                                </div>
                            </div>
                            <!-- /.col -->
                        </div>

                        <!-- or use a table instead -->

                        <div class="table-responsive mt-4">
                            <table class="table table-striped table-borderless border-0 border-b-2 brc-default-l1">
                                <thead class="bg-none bgc-default-tp1">
                                    <tr class="text-white">
                                        <th class="opacity-2">Req Id</th>
                                        <th>Med. Id</th>
                                        <th>@Html.DisplayNameFor(mdoel => mdoel.Medicine.Name)</th>
                                        <th>@Html.DisplayNameFor(mdoel => mdoel.Medicine.GenericName)</th>
                                        <th>@Html.DisplayNameFor(mdoel => mdoel.Quantity)</th>
                                        <th>@Html.DisplayNameFor(mdoel => mdoel.Completed)</th>
                                    </tr>
                                </thead>

                                <tbody class="text-95 text-secondary-d3">
                                        <tr>
                                            <td>@Html.DisplayFor(mdoel => mdoel.Id)</td>
                                            <td>@Html.DisplayFor(mdoel => mdoel.Medicine.Id)</td>
                                            <td>@Html.DisplayFor(mdoel => mdoel.Medicine.Name)</td>
                                            <td>@Html.DisplayFor(mdoel => mdoel.Medicine.GenericName)</td>
                                            <td>@Html.DisplayFor(mdoel => mdoel.Quantity)</td>
                                            <td>
                                                @{
                                                    var status = Model.Completed ? "Completed" : "Pending";
                                                }
                                                @Html.DisplayFor(model => status)
                                            </td>
                                        </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="row border-b-2 brc-default-l2"></div>

                        <div class="row mt-3">
                            <div class="col-12 col-sm-7 text-grey-d2 mt-2 mt-lg-0">
                                <p class="text-primary text-105">Note: You will soon receive your medicines by courier.</p>
                            </div>
                        </div>

                        <hr />

                        <div>
                            <p class="text-center text-secondary">Thank you</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>